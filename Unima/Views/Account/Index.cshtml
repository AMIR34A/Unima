                </div>
                <div class="modal-footer">
                    <button type="button" class="btn " data-bs-dismiss="modal"
                            style="background-color: #f2e5bf; color: #243642; font-weight: bold;">
                        مطالعه کردم
                    </button>

                </div>
            </div>
        </div>
    </div>
    <!--  end of rules -->

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
