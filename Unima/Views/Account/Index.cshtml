@using Unima.Dal.Entities.Models.Support
@model List<Support>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="end">


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Unima</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
          integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src='https://www.google.com/recaptcha/api.js?hl=fa'></script>

</head>

<body>
    <div class="container-fluid d-flex justify-content-center align-items-center min-vh-100  ">
        <div class="row justify-content-center align-items-center custom-margin" >
            <!--  panel -->
            <!-- login   -->
            <div id="loginForm" class=" col-6 login-panel text-white p-4 rounded  ">
                <form class=" form  mx-auto" action="">
                    <h2 class="title text-center mt-5 font-weight-bold">یونیما</h2>

                    <div class=" form-group py-4 ">

                        <input class="form-control my-3 p-2 input" required id="karbari" type="text"
                            placeholder="نام کاربری">
                        <label class="label" for="karbari">نام کاربری</label>
                    </div>
                    <div class="form-group py-4 text-white password-input">
                        <button type="button" class="showpassword btn px-1" onclick="togglePassword()">
                            <i class="fa-solid fa-eye" id="eyeIcon"></i>
                        </button>

                        <input required class="form-control my-3 p-2 input" id="password1" type="password"
                            placeholder="کلمه عبور">

                        <label class="label" for="password1">کلمه عبور</label>
                    </div>
                    <div class="form-group my-3 pt-4   ">
                        <input class="form-check-input text-danger" type="checkbox" id="checked">
                        <label class="  checked mr-2" for="checked">مرا به خاطر بسپار</label>


                    </div>
                    <div class="form-group mt-4 ">

                        <div class="g-recaptcha" data-sitekey="6LcXdpUqAAAAABAtABbwcEOA-ojiK75pztHaZLt7">
                        </div>
                    </div>
                    <div class="form-group text-center mt-2">
                        <button class="btn btn-block w-100 mt-4 rounded-pill   enter">ورود</button>
                    </div>
                    <div class="form-group text-center ">
                        <div class="row   justify-content-around  mt-5  mb-2  ">
                            <a class="col text-nowrap   forgot  " href=""> فراموشی رمز عبور! </a>
                            <a class="col text-nowrap  sign-in" href="#" id="showSignup">ثبت نام</a>
                        </div>
                    </div>
                </form>
            </div>
            <!--  end of login   -->
            <!-- signup  -->
            <div id="signupForm" class=" col-6 login-panel    text-white p-4 rounded hidden ">
                <form class=" form  mx-auto" action="">
                    <h2 class=" title  text-center  mt-2 font-weight-bold">یونیما</h2>
                    <div class=" form-group pt-2  pb-3   ">
                        <input class="form-control mb-3 mt-1 p-2 input   " required id="signup-karbari" type="text"
                            placeholder=" نام و نام خانوادگی ">
                        <label class="label" for="signupkarbari">نام و نام خانوادگی </label>
                    </div>
                    <div class=" form-group pt-4 pb-3 row   ">
                        <div class="col-6"><input class="form-control my-3 p-2 input   " required id="signup-karbari"
                                type="text" placeholder="شماره دانشجویی ">
                            <label class="label" for="signupkarbari">شماره دانشجویی </label>
                        </div>
                        <div class="col-6"><input class="form-control my-3 p-2 input  " required id="phonenumber"
                                type="text" placeholder=" تلفن همراه">
                            <label class="label" for="phonenumber"> تلفن همراه</label>
                        </div>
                    </div>
                    <div class="form-group  py-3 text-white password-input   ">
                        <button type="button" class="showpassword btn px-1" onclick="togglePassword()">
                            <i class="fa-solid fa-eye" id="eyeIcon1"></i>
                        </button>
                        <input class="form-control  my-3 p-2   input " required id="signup-password" type="password"
                            placeholder="کلمه عبور">
                        <label class="label" for="signup-password">کلمه عبور</label>
                    </div>
                    <div class="form-group py-3 text-white password-input   ">
                        <button type="button" class="showpassword btn px-1" onclick="togglePassword()">
                            <i class="fa-solid fa-eye" id="eyeIcon2"></i>
                        </button>
                        <input class="form-control  my-3 p-2   input " required id="signup-password-again"
                            type="password" placeholder=" تکرار کلمه عبور" oninput="checkPasswordMatch()">
                        <label class="label" for="signup-password-again"> تکرار کلمه عبور</label>
                    </div>
                    <p class="pt-4" id="error-message" style="font-size: .8em; color: rgb(240, 7, 7); display: none;">
                        کلمه عبور و تکرار آن یکسان نیستند!</p>
                    <div class="form-group mt-4  mb-3">
                        <input class="form-check-input" type="checkbox" required id="checked">
                        <label class=" checked  mr-2" for="checked">
                            <a id="button-rules" class="d-inline-block " href="" data-bs-toggle="modal"
                                data-bs-target="#exampleModal">
                                شرایط و قوانین
                            </a> را میپذیرم
                        </label>
                    </div>
                    <div class=" form-group  mb-3    ">
                        <input class="form-control  input   " required id="signup-karbari" type="text"
                            placeholder="شماره دانشجویی معرف (اختیاری)">
                    </div>
                    <div class="form-group">
                        <div class="g-recaptcha" data-sitekey="6LcXdpUqAAAAABAtABbwcEOA-ojiK75pztHaZLt7">
                        </div>
                    </div>
                    <div class="form-group text-center d-block align-content-center">
                        <button class="btn btn-block w-100  mt-4 rounded-pill   enter">ثبت نام </button>
                        <p class="mt-4 return-paragraph d-inline-block ">بازگشت به پنل </p>
                        <a id="showLogin" class="return-login d-inline-block pr-1" href="#">ورود</a>
                    </div>
                </form>
            </div>
            <!-- end of signup   -->
            <!-- end of panel -->
