@using Unima.Models.ViewModels
@model UserVerificationViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تایید شماره همراه</title>
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/Verification.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid d-flex justify-content-center align-items-center flex-column min-vh-100">
        <form method="post">
            <div class=" d-flex  justify-content-center align-items-center flex-column box px-5 mx-5 ">
                <h3 class="mb-3">کد تایید را وارد کنید</h3>
                <h6 class="mb-3">کد تایید برای شماره <span id="#">@Model.PhoneNumber</span> ارسال شد</h6>
                <div class="otp-box">
                    <input id="number1" type="text" maxlength="1">
                    <input id="number2" type="text" maxlength="1">
                    <input id="number3" type="text" maxlength="1">
                    <input id="number4" type="text" maxlength="1">
                    <input id="number5" type="text" maxlength="1">
                    <input id="number6" type="text" maxlength="1">
                </div>
                <input asp-for="Token" hidden/>
                <input asp-for="PhoneNumber" hidden/>
                <div class="timer d-inline my-2" id="timer"></div>
                <button class="btn resend-btn" id="resend-link" onclick=" resendOTP()">ارسال مجدد کد</button>
                <button id="submitButton" asp-action="VerifyPhoneNumber" type="submit" class="btn confirm-btn w-100 rounded" onclick="concatInputs()">تایید</button>
            </div>
        </form>
    </div>
   <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/Verification.js"></script>
</body>
</html>