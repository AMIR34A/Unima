@using Microsoft.AspNetCore.Identity
@using Unima.Dal.Entities
@inject UserManager<ApplicationUser> _userManager
<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Unima</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/layoutStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/all.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark">
        <button class="navbar-toggler  mb-2 bg-secondary m-3 " data-bs-toggle="collapse" data-bs-target="#sidebar">
            <span class="navbar-toggler-icon fs-6 "></span>
        </button>
        <div class="navbar-collapse collapse" id="sidebar">
            <div class="container-fluid">
                <div class="row">
                    @{
                        bool isLoginned = User is not null && User.Identity is not null && User.Identity.IsAuthenticated;
                    }
                    <!--sidebar-->
                    <div class="col-xl-2 col-lg-3 col-md-4 sidebar mt-md-2 mt-5 mb-3 mb-md-0 px-3 pt-sm-5 fixed-top text-dark-emphasis ">
                        <ul class="nav-bar list-unstyled  mt-sm-5 mb-md-0 options">
                            <li class="nav-item current text-center">
                                <a href=@(isLoginned ? "/User/Dashboard" : "/") class="nav-link p-3 mb-2">
                                    <i class="fas fa-home ml-3 fa-lg"></i>@(isLoginned ? " داشبورد" : "ورود")
                                </a>
                            </li>
                            @if (isLoginned)
                            {
                                <li class="nav-item linksidebar mx-1">
                                    <a href="/User/reserveFood" class="nav-link d-flex justify-content-start  align-items-center gap-2 p-3">
                                        <i class="fa-solid fa-utensils ml-3 fa-lg"></i> رزرو غذا
                                    </a>
                                </li>
                                <li class="nav-item linksidebar mx-1">
                                    <a href="/Professor/Status" class="nav-link d-flex justify-content-start align-items-center gap-2 p-3">
                                        <i class="fas fa-chalkboard-teacher fa-lg"></i>رودمپ دانشکده
                                    </a>
                                </li>
                                <li class="nav-item linksidebar mx-1">
                                    <a href="/Faculty/Professors" class="nav-link d-flex justify-content-start align-items-center gap-2 p-3">
                                        <i class="fas fa-chalkboard-teacher fa-lg"></i>اساتید
                                    </a>
                                </li>
                                <li class="nav-item linksidebar mx-1">
                                    <a href="/User/Appointment" class="nav-link d-flex justify-content-start align-items-center gap-2 p-3">
                                        <i class="fa-regular fa-calendar fa-lg"></i>قرارها
                                    </a>
                                </li>
                                <hr>
                                <li class="nav-item linksidebar mx-1">
                                    <a href="/User/Profile"
                                       class="nav-link d-flex justify-content-start align-items-center gap-2 p-3 mb-2">
                                        <i class="fas fa-user fa-lg"></i> پروفایل
                                    </a>
                                </li>
                            }
                        </ul>
                        @if (isLoginned)
                        {
                            <ul class="nav-bar list-unstyled d-none flex-column mt-4 align-items-start options">
                                <li class="nav-item linksidebar">
                                    <a href="" class="nav-link p-3 mb-2">
                                        <i class="fas fa-user ml-3 fa-lg"></i>پروفایل
                                    </a>
                                </li>
                                <li class="nav-item linksidebar ">
                                    <a href="" class="nav-link p-3 mb-2">
                                        <i class="fa-solid fa-bowl-food ml-3 fa-lg"></i>
                                    </a>
                                </li>
                            </ul>
                            <button type="button"
                                    class="btn d-none d-lg-block btn-outline-danger position-absolute bottom-0 mt-5 quit rounded-5 w-75 mb-4 me-3 p-2"
                                    data-bs-toggle="modal" data-bs-target="#leaveSite">
                                خروج <i class="fa-solid fa-arrow-right-from-bracket"></i>
                            </button>
                        }
                    </div>
                    <!--end of sidebar-->
                    <!--topnav-->
                    @if (isLoginned)
                    {
<div class="col-xl-12 col-lg-9 col-md-8 fixed-top p-3 glass-header">
    <div class="row align-items-center">
        <!-- بخش unima-icon -->
        <div class="col-xl-2 col-lg-3 col-md-4 px-3 d-flex justify-content-center align-items-center">
            <div class="unima-icon"></div>
        </div>

        <!-- بخش اطلاعات کاربر -->
        <div class="col-xl-3 col-lg-4 col-md-5">
            <div class="d-flex align-items-center">
                <img src="/Images/1566112971-hosseinpic1.jpg"
                     alt="پروفایل"
                     width="50"
                     height="50"
                     class="rounded-circle img-profile">
                <div class="text-end d-flex flex-column">
                    <span class="user-fullname my-1">نام و نام خانوادگی: رضا زارع</span>
                    <span class="user-id mt-1">کد دانشجویی: 4001226190</span>
                </div>
            </div>
        </div>

        <!-- بخش آیکون‌های سمت چپ -->
        <div class="col-xl-3 col-lg-5 col-md-3 me-auto">
            <ul class="navbar-nav flex-row justify-content-end align-items-center">
                <li class="nav-item ">
                    <a class="nav-link" href="#">
                        <i class="fas fa-comments fa-lg text-muted"></i>
                    </a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="#">
                        <i class="fas fa-bell fa-lg text-muted"></i>
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="fas fa-user fa-lg text-muted"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end bg-secondary-subtle bg-gradient custom-dropdown">
                        <li class="text-center my-4 fw-bold">مشخصات دانشجو</li>
                        <hr>
                        <li class="my-2 text-center">
                            <span class="fs-6">رضا زارع</span>
                        </li>
                        <li class="text-center">
                            <span>4001226190</span>
                        </li>
                        <hr class="dropdown-divider">
                        <div class="text-center">
                            <a class="dropdown-item link-danger topnavExitButton" href="/User/Account/LogOut">
                                <i class="fa-solid fa-arrow-right-from-bracket mx-2"></i>خروج از حساب کاربری
                            </a>
                        </div>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>

                    }
                    <!--end of topnav-->
                </div>
            </div>
        </div>
    </nav>
    <main role="main" class="pb-3">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-10 col-lg-9 col-md-8  mt-6 mx-auto mx-md-0 me-md-auto">
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>
    <div class="modal fade" id="leaveSite" tabindex="-1" aria-labelledby="leaveSiteLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered ">
            <div class="modal-content">
                <div class="modal-header position-relative">
                    <h5 class="modal-title" id="leaveSiteLabel">آیا مطمئنید؟</h5>
                    <button type="button" class="btn-close position-absolute start-0 ms-3" data-bs-dismiss="modal"
                            aria-label="بستن"></button>
                </div>
                <div class="modal-body">
                    آیا می‌خواهید از سایت خارج شوید؟
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">خیر</button>
                    <a class="btn btn-danger"
                       href="/User/Account/LogOut">
                        بله
                    </a>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>