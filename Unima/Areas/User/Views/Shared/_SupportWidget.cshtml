<style>
    .chat-toggle {
        position: fixed;
        bottom: 30px;
        left: 30px;
        background-color: #dda853;
        color: white;
        border: none;
        border-radius: 50%;
        width: 60px;
        height: 60px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        z-index: 1054;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: auto;
        font-size: 24px;
    }

    .support-panel {
        position: fixed;
        top: 40px;
        bottom: 40px;
        left: 20px;
        width: 100%;
        max-width: 380px;
        background-color: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.2);
        transform: translateX(-120%);
        transition: transform 0.5s ease, opacity 0.3s ease;
        opacity: 0;
        z-index: 1055;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

    .support-content{
        flex: 1 1 auto;
        overflow-y: auto;
        padding: 1rem;
        scroll-behavior: smooth;
    }

    .support-panel.open {
        transform: translateX(0);
        opacity: 1;
    }

    .support-header {
        background: linear-gradient(75deg, rgba(221, 168, 83, 1) 38%, rgb(233, 214, 181) 95%);
        position: relative;
        display: flex;
        align-items: center;
        text-align: center;
    }

    .accordion-button::after {
        margin-left: -28px !important;
        margin-right: auto !important;
        left: 0;
        right: auto;
    }

    .accordion-button:not(.collapsed) {
        background-color: #fff !important;
        color: black;
    }

    .accordion{
        border-bottom: 1px solid rgba(111, 129, 148, .16);
        width: 90%;
        margin: 0 auto;
    }

    .support-header span {
        position: absolute;
        right: 25px;
    }

    .support-header div {
        position: absolute;
        left: 25px;
    }

    .vertical-divider {
        align-self: stretch;
        border-left: 1px solid rgba(111, 129, 148, .16);
        height: auto;
        width: 1px;
    }

    
</style>
<style>

    @@media (max-width: 576px) {
        .support-panel {
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            width: 100% !important;
            max-width: 100% !important;
            border-radius: 0;
        }
    }
</style>





<button class="chat-toggle" id="chatToggle" title="پشتیبانی">
    <i class="fa-solid fa-comment"></i>
</button>

<div class="support-panel" id="supportPanel">
    <div class="support-header p-4">
        <span class="fs-6">پشتیبانی یونیما</span>
        <div class="text-start d-flex align-items-center">
            <button class="btn-close" id="closePanel"></button>
        </div>
    </div>

    <div class="support-content">
        <div class="accordion" id="accordionExample">
            <div class="accordion-content">
                <h2 class="accordion-header" id="headingTwo">
                    <div class="d-flex align-items-center w-100 my-3">
                        <div class="vertical-divider me-3 my-1"></div>
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapse1">
                            از رزرو شدن غذا مطمئن باشم؟
                        </button>
                    </div>
                </h2>
                <div id="collapse1" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                    <div class="accordion-body px-1">
                        از رزرو شدن غذای خود اطمینان حاصل کنید.
                    </div>
                </div>
            </div>
        </div>
        <div class="accordion" id="accordionExample">
            <div class="accordion-content">
                <h2 class="accordion-header">
                    <div class="d-flex align-items-center w-100 my-3">
                        <div class="vertical-divider me-3 my-1"></div>
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapse3">
                            از رزرو شدن غذا مطمئن باشم؟
                        </button>
                    </div>
                </h2>
                <div id="collapse3" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                    <div class="accordion-body px-1">
                        از رزرو شدن غذای خود اطمینان حاصل کنید.
                    </div>
                </div>
            </div>
        </div>
        <div class="accordion" id="accordionExample">
            <div class="accordion-content">
                <h2 class="accordion-header">
                    <div class="d-flex align-items-center w-100 my-3">
                        <div class="vertical-divider me-3 my-1"></div>
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapse2">
                            از رزرو شدن غذا مطمئن باشم؟
                        </button>
                    </div>
                </h2>
                <div id="collapse2" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                    <div class="accordion-body px-1">
                        از رزرو شدن غذای خود اطمینان حاصل کنید.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    const chatBtn = document.getElementById("chatToggle");
    const panel = document.getElementById("supportPanel");
    const closeBtn = document.getElementById("closePanel");

    chatBtn.addEventListener("click", () => {
        panel.classList.add("open");
        chatBtn.classList.add("d-none");
    });

    closeBtn.addEventListener("click", () => {
        panel.classList.remove("open");
        chatBtn.classList.remove("d-none");
    });

    document.addEventListener("click", (e) => {
        if (!panel.contains(e.target) && !chatBtn.contains(e.target) && !chatBtn.contains(e.target)) {
            panel.classList.remove("open");
            chatBtn.classList.remove("d-none");
        }
    });
</script>
