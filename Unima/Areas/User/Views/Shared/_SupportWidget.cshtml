@section Styles{
    <link rel="stylesheet" href="/css/SupportWidget.css">
}

@section Scripts{
    <script src="/js/SupportWidget.js"></script>
}


<style>
  .chat-toggle {
    position: fixed;
    bottom: 30px;
    left: 30px; 
    background-color: #dda853;
    color: white;
    border: none;
    border-radius: 50%;
    width: 60px;
    height: 60px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    z-index: 1054;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: auto;
    font-size: 24px;
  }

  .support-panel {
    position: fixed;
    top: 40px;
    bottom: 40px;
    left: 20px; 
    width: 100%;
    max-width: 380px;
    background-color: #fff;
    border-radius: 16px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.2);
    transform: translateX(-120%); /* تغییر دادیم */
    transition: transform 0.5s ease, opacity 0.3s ease;
    opacity: 0;
    z-index: 1055;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .support-panel.open {
    transform: translateX(0);
    opacity: 1;
  }

  .support-header{
    background: linear-gradient(75deg, rgba(221, 168, 83, 1) 38%, rgb(233, 214, 181) 95%);
    position: relative;
    display: flex;
    align-items: center;
    text-align: center;
  }

  .support-header span{
    position: absolute;
    right: 25px;
  }

  .support-header div{
    position: absolute;
    left: 25px;
  }

</style>



<button class="chat-toggle" id="chatToggle" title="پشتیبانی">
  <i class="fa-solid fa-comment"></i>
</button>

<div class="support-panel" id="supportPanel">
  <div class="support-header p-4">
    <span class="fs-6">پشتیبانی یونیما</span>
    <div class="text-start d-flex align-items-center">
        <button class="btn-close" id="closePanel"></button>
    </div>
  </div>

  <div class="support-content">
    <div class="accordion" id="accordionExample">
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne">
          <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne">
            حالتون چطوره؟
          </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
          <div class="accordion-body">
            لوخبددخثبئسیمدبمسدرمسدرمتسردمردم
          </div>
        </div>

      <div class="accordion-item">
        <h2 class="accordion-header" id="headingTwo">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo">
            از رزرو شدن غذا مطمئن باشم؟
          </button>
        </h2>
        <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
          <div class="accordion-body">
            از رزرو شدن غذای خود اطمینان حاصل کنید.
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>


<script>
  const chatBtn = document.getElementById("chatToggle");
  const panel = document.getElementById("supportPanel");
  const closeBtn = document.getElementById("closePanel");

  chatBtn.addEventListener("click", () => {
    panel.classList.add("open");
  });

  closeBtn.addEventListener("click", () => {
    panel.classList.remove("open");
  });

  document.addEventListener("click", (e) => {
    if (!panel.contains(e.target) && !chatBtn.contains(e.target)) {
      panel.classList.remove("open");
    }
  });
</script>
