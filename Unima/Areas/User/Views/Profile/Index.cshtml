@{
    Layout = "/Areas/User/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Unima</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .Section-title {
            background: #D9D9D9 linear-gradient(180deg, rgba(136, 158, 115, 0.35) 50%, rgba(217, 217, 217, 1) 100%);
            width: 147px;
            height: 56px;
            border-radius: 10px;
            display: block;
            font-weight: bold;
            margin: 20px 40px;
        }

        .Section-Personal {
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        .Section-Card {
            background-color: #E5DCDC;
            border-radius: 15px;
            padding: 20px;
            margin: 0 40px;
            text-align: right;
        }

        .Settings {
            margin-top: 75px;
            margin-right: 260px;
            display: flex;
            flex-direction: column;
            width: 65%;
        }

        .bg-secondary {
            background-color: #9D9D9F !important;
        }

        .form-control {
            height: calc(2rem + 0.75rem + 2px);
            width: 46%;
            background-color: #D9D9D9;
            display: block;
        }

        .Card-input {
            text-decoration: none;
            background-color: #14AE5C;
            border: none;
            border-radius: 8px;
            margin-right: 8px;
            height: 40px;
            width: 100px;
            color: black;
            font-size: 12px;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: 0.3s;
        }

        .Card-input:hover {
            color: #E5DCDC;
            text-decoration: none;
            background-color: #14ae5caa;
        }
    </style>
</head>

<body>
    <section class="bg-danger; Settings">
        <div class="Section-Personal">
            <div class="Section-title d-flex justify-content-center align-items-center">
                <p class="m-0">
                    اطلاعات شخصی
                </p>
            </div>
            <div class="Section-Card">
                <form>
                    <div class="form-group">
                        <label for="formGroupExampleInput">نام‌ونام‌خانوادگی</label>
                        <input type="text" class="form-control" id="formGroupExampleInput">
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">ایمیل</label>
                        <input type="email" class="form-control" id="formGroupExampleInput2">
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">تلفن‌همراه</label>
                        <div class="d-flex align-items-center">
                            <input type="text" class="form-control" id="formGroupExampleInput2">
                            <a href="#" class="Card-input" data-bs-toggle="modal"
                                data-bs-target="#exampleModalCenter">تغییر شماره همراه</a>

                    </div>
                    <div class="form-group"></div>
                    <label for="formGroupExampleInput2">رمزعبور</label>
                    <div class="d-flex align-items-center justify-content-between">
                        <input type="text" class="form-control" id="formGroupExampleInput2">
                        <div class="d-flex">
                            <a href="#" class="Card-input bg-secondary">ویرایش</a>
                            <a href="#" class="Card-input">ثبت</a>
                        </div>
                    </div>
                 
            </div>
        </div>
        </form>
        </div>
        @* MODALS *@
        <div class="modal fade" id="exampleModalCenter" tabindex="-1"
        aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered ">
            <div class="modal-content Section-Card">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">فرم</h5>
                    <button type="button" class="btn-close " data-bs-dismiss="modal"
                        aria-label="close-tab"></button>
                </div>
                <div class="modal-body">
                    <form>
                            <label for="name" class="form-label">شماره همراه</label>
                        <div class="mb-3 d-flex align-items-center">
                            <input type="text" class="form-control" id="name">
                            <a href="#" class="Card-input" data-bs-toggle="modal"
                              data-bs-target="#exampleModalCenter">ارسال کد</a>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">کد تاییدیه</label>
                            <input type="email" class="form-control" id="email">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary"
                        data-bs-dismiss="modal">بستن</button>
                    <button type="button" class="btn btn-primary">ذخیره</button>
                </div>
            </div>
        </div>
        </div>
        </div>

    </section>
</body>

</html>
