@using Unima.Areas.Professor.Models.ViewModels
@model StatusViewModel
@{
    Layout = "/Areas/User/Views/Shared/_Layout.cshtml";
}
    <style>
        .search-wrapper { max-width: 700px; margin: 40px auto; }
        #searchInput { border: none; border-bottom: 2px solid #ccc; border-radius: 0; background-color: transparent; padding: 15px 5px; font-size: 1.2rem; transition: border-color 0.3s ease; }
        #searchInput:focus { box-shadow: none; border-color: #0d6efd; }
        .professor-card-wrapper { margin-bottom: 2rem; }
        .professor-card { border-radius: 20px; border: none; box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08); transition: transform 0.3s ease, box-shadow 0.3s ease; text-align: center; }
        .professor-card:hover { transform: translateY(-8px); box-shadow: 0 15px 35px rgba(0, 0, 0, 0.12); }
        .card-header-color { background-color: #e9ecef; height: 100px; border-radius: 20px 20px 0 0; position: relative; }
        .professor-card .profile-img { width: 120px; height: 120px; border-radius: 50%; object-fit: cover; border: 5px solid #fff; position: absolute; bottom: -60px; left: 50%; transform: translateX(-50%); }
        .professor-card .card-body { padding-top: 75px; }
        .professor-card .card-title { font-weight: 700; font-size: 1.4rem; margin-bottom: 0.5rem; }
        .specialty-tag { display: inline-block; background-color: #d1e7dd; color: #0f5132; padding: 0.3rem 1rem; border-radius: 50px; font-size: 0.85rem; font-weight: 500; margin-top: 0.5rem; }
        .office-location { color: #6c757d; margin: 1rem 0; }
        .social-links a { color: #6c757d; font-size: 1.2rem; margin: 0 10px; transition: color 0.3s ease; }
        .social-links a:hover { color: #0d6efd; }
    </style>

    <div class="container my-5">
        <div class="search-wrapper">
            <input type="text" id="searchInput" class="form-control text-center" placeholder="جستجوی استاد...">
        </div>

        <div class="row" id="professors-list">
            
            <div class="col-lg-3 col-md-6 professor-card-wrapper">
                <div class="card professor-card">
                    <div class="card-header-color">
                        <img src="images/ali-mohammadi.jpg" class="profile-img" alt="تصویر استاد علی محمدی">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">دکتر علی محمدی</h5>
                        <p class="text-muted">استاد تمام</p>
                        <span class="specialty-tag">هوش مصنوعی</span>
                        <p class="office-location mt-3"><i class="fas fa-map-marker-alt me-2"></i>دفتر: ساختمان ۲، اتاق ۱۰۱</p>
                        <div class="social-links pb-2">
                            <a href="#" title="مشاهده رزومه"><i class="fas fa-file-alt"></i></a>
                            <a href="#" title="ارسال ایمیل"><i class="fas fa-envelope"></i></a>
                            <a href="#" title="صفحه شخصی"><i class="fas fa-globe"></i></a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 professor-card-wrapper">
                <div class="card professor-card">
                    <div class="card-header-color">
                         <img src="images/sara-rezaei.jpg" class="profile-img" alt="تصویر استاد سارا رضایی">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">دکتر سارا رضایی</h5>
                        <p class="text-muted">دانشیار</p>
                        <span class="specialty-tag" style="background-color: #f8d7da; color: #842029;">شبکه‌های کامپیوتری</span>
                        <p class="office-location mt-3"><i class="fas fa-map-marker-alt me-2"></i>دفتر: ساختمان ۱، اتاق ۲۰۵</p>
                        <div class="social-links pb-2">
                            <a href="#" title="مشاهده رزومه"><i class="fas fa-file-alt"></i></a>
                            <a href="#" title="ارسال ایمیل"><i class="fas fa-envelope"></i></a>
                            <a href="#" title="صفحه شخصی"><i class="fas fa-globe"></i></a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 professor-card-wrapper">
                <div class="card professor-card">
                    <div class="card-header-color">
                         <img src="images/reza-hosseini.jpg" class="profile-img" alt="تصویر استاد رضا حسینی">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">دکتر رضا حسینی</h5>
                        <p class="text-muted">استادیار</p>
                        <span class="specialty-tag" style="background-color: #cff4fc; color: #055160;">یادگیری ماشین</span>
                        <p class="office-location mt-3"><i class="fas fa-map-marker-alt me-2"></i>دفتر: ساختمان ۳، اتاق ۳۱۰</p>
                        <div class="social-links pb-2">
                            <a href="#" title="مشاهده رزومه"><i class="fas fa-file-alt"></i></a>
                            <a href="#" title="ارسال ایمیل"><i class="fas fa-envelope"></i></a>
                            <a href="#" title="صفحه شخصی"><i class="fas fa-globe"></i></a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 professor-card-wrapper">
                <div class="card professor-card">
                    <div class="card-header-color">
                        <img src="/Images/1566112971-hosseinpic1.jpg" class="profile-img" alt="تصویر استاد مریم احمدی">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">دکتر مریم احمدی</h5>
                        <p class="text-muted">دانشیار</p>
                        <span class="specialty-tag" style="background-color: #fff3cd; color: #664d03;">امنیت داده</span>
                        <p class="office-location mt-3"><i class="fas fa-map-marker-alt me-2"></i>دفتر: ساختمان ۲، اتاق ۱۰۵</p>
                        <div class="social-links pb-2">
                            <a href="#" title="مشاهده رزومه"><i class="fas fa-file-alt"></i></a>
                            <a href="#" title="ارسال ایمیل"><i class="fas fa-envelope"></i></a>
